<style>
    @import url('https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&family=Patrick+Hand&display=swap');
    @import url('https://fonts.googleapis.com/css2?family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&display=swap');
    
    
    .navbar{
        background-color: #e2e1e1;
        height: 3rem;
        min-width: 35%;
        position: fixed;
        display: flex;
        justify-content: center;
        align-items: center;
        margin: 1rem auto;
        border-radius: 25px;
        padding: 5px 10px;
        z-index: 10000;
    }
    
    .indice{
        list-style-type: none;
        margin: 0;
        padding: 0;
        display: flex;
        
        
    }
    li {
        margin: 0 2.5rem;
        
    }
     a {
        color: #000000;
        text-decoration: none;
        /*font-family: "Patrick hand", sans-serif; tipografia estilo escritura*/
        font-family:"Inter", bold;
        font-size: 18px;
       
    }

    .indice li:hover a{
        color: #8a8484;
    }
    
    
    
    /*#554d4d4f  color para sombra en gris*/ 
    .indice li:focus-within a,
    .indice li.active a {
        color: #2799B2;
        text-shadow: -2px 3px 10px #2799b27c;
    }

    .menu-icon{
        display: none;
        background-size: contain;
        border: none;
        cursor: pointer;
        background-color: transparent;
        
    }
    .menu-icon{
        width: 100%;
        height: auto;
    }
    .responsive-container-div{
        display: none;
        justify-content: space-between;
        
        width: 100%;
    }
    #inicio-responsive{
        padding: 0;
        display:flex;
        align-items: center;
        display: none;
    }

    .menu-icon{
        width: 50px;
        display: none;
        
    }
    
    .dropdown-menu{
        display: none;
    }


    /*navbar responsive incompleto, falta acomodar y poner el logo menu a la derecha y un sppan q diga agustin a la izquierda. tambien falta la animacion de despliegue de menu */
    @media only screen and (max-width: 860px){
        
        .menu-icon{
            display: block;
            width: 50px;
            cursor: pointer;
        }
        
        .indice{
            position: absolute;
            z-index: -1000;
            top: 30px;
            left: 0;
            right: 0;
            height: 270px;
            width: 100%;
            background: #e2e1e1;
            display: block;
            text-align: center;
            overflow: hidden;
            border-radius: 0 0 25px 25px;
            max-height: 0;
            transition: max-height 0.3s ease-in-out;
            
        }
        li{
            margin: 30px;
        }
        li:first-child{
            display: none;
        }
        
        li:nth-child(2){
            margin-top: 50px;
        }

        .responsive-container-div{
            display: flex;
            justify-content: space-between;
            width: 100%;
            padding: 20px;
            
        }

        #inicio-responsive{
            padding: 0;
            display:flex;
            
        }
        .navbar{
            width: 60%;
            
        }
        .indice.hidden{
            max-height:0 ;
        }
        .indice.active{
            max-height: 270px;
        }
      
    }

</style>


<script> //script para manejar el active y focus de la navbar
    const items = document.querySelectorAll('.indice li');

items.forEach((item) => {
    item.addEventListener('click', () => {
        items.forEach((el) => el.classList.remove('active'));
        item.classList.add('active');
    });
});

document.addEventListener('DOMContentLoaded', () => {
    const menuIcono = document.querySelector('.menu-icon'); // Botón del menú hamburguesa
    const navbar = document.querySelector('.indice'); // Contenedor de los elementos del menú

    // Asegúrate de que el botón del menú y el navbar existen
    if (menuIcono && navbar) {
        // Inicialmente el menú está oculto
        navbar.classList.add('hidden');
        
        // Maneja el click en el ícono del menú usando addEventListener
        menuIcono.addEventListener('click', function () {
            // Alterna la clase 'active' para mostrar/ocultar el menú con animación
            navbar.classList.toggle('active');
        });
    } else {
        console.error('No se pudo encontrar el botón del menú o el contenedor del menú');
    }
});



</script>